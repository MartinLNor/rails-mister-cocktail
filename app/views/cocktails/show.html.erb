<div class="text-center">
  <div>
    <h1><%= @cocktail.name %></h1>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <div class="image text-center">
          <%= image_tag @cocktail.image_url %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <ul>
          <%  @cocktail.doses.each do |dose| %>
          <li>
            <%=  dose.description %> <%= dose.ingredient.name %> <%= link_to '', dose_path(dose), method: :delete, id: "sweet-alert-demo", class: "fas fa-trash-alt" %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="form">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient, as: :select %>
      <%= f.input :description %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
